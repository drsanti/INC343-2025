{
	"css.lint.unknownAtRules": "ignore",
	"editor.fontFamily": " 'JetBrains Mono', 'Fira Code', 'Cascadia code', monospace",
	"editor.fontLigatures": true,
	"editor.fontWeight": "600",
	"editor.fontSize": 16,
	"editor.lineHeight": 1.5,
	"editor.autoIndent": "full",
	"editor.tabSize": 2,
	"editor.rulers": [100, 100],
	"prettier.printWidth": 100,
	"terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia code', monospace",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.mouseWheelZoom": true,
	"markdown.preview.fontSize": 16,
	"editor.mouseWheelZoom": true,
	"cSpell.words": ["psws", "UART"],
	"files.exclude": {
		"**/**/*.json": true,
		"**/**/*.js": true,
		"**/**/.gitignore": true,
		"**/**/postcss.config.js": true,
		"**/**/.editorconfig": true,
		"**/**/.eslintignore": true,
		"**/**/.eslintrc.cjs": true,
		"**/**/.prettierignore": true,
		"**/**/.prettierrc.yaml": true,
		"**/**/node_modules": true,
		"**/**/tools": true,
		"**/**/.vscode": false,
		//
		"frontend/src/examples/ternion": true,
		"frontend/src/examples/app.tsx.bak": true,
		"frontend/src/examples/app.ternion.tsx.bak": true
	}
}
